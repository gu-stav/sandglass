extends master

block content
  h2 Activities
  ul.timeline
    each activity in activities
      li.timeline_item.activity
        div.activity_time
          span.activity_start= activity.start
          span.activity_end= activity.end

        div.activity_info
          if activity.task
            strong.activity_task= activity.task.title

          if activity.project
            strong.activity_project= activity.project.title

          if !activity.end
            form( action="/activity/" + activity.id + "/stop", method="post" )
              button(type="submit", name="stop_tracking") Stop tracking

        p.activity_description= activity.description

block tracking
  form( action="/activity", method="post" ).track
    div.form-group
      input( type="text",
             name="project",
             placeholder="Project" ).inp
    div.form-group
      input( type="text",
             name="task",
             placeholder="Task" ).inp
    div.form-group
      input( type="text",
             name="description",
             placeholder="Description" ).inp
    div.form-group
      button( type="submit" ).btn Submit

block user
  if user
    div.header_user
      strong.header_user-name= user.name
      a.header_user-logout(href="/logout") Logout

